<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/stylesheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- not possible to link JS file to EJS (<script src="/js/search-input.js"></script>), so will do so by directly placing code in here  -->
</head>
<body>
    <section id="headingContainer">
        <h1 id="heading">Expiry Date Tracker</h1>
    </section>

    <section id="container">
        <div class="btn-group btn-group-sm">
            <a href="/products" class="btn btn-primary active" aria-current="page" id="allProductsButton">All Products</a>
            <a href="/products/cook" class="btn btn-primary active" aria-current="page" id="cookingButton">Cooking Ideas</a>
        </div>
    </section>

    

    <section id="subheadingContainer">
        Current items in the fridge:
    </section>
    
    <section id="unorderedListContainer">
        <input type="text" placeholder="Seach Here..." id="search-input">
        
        <a href="/products/new" id="addProduct">Add</a>

        <br>

        <ul id="unorderedList">
            <% for (let product of products) { %>
                <!-- for items that are expiring within 3 days, highlight in red -->
                
                <% const dayDifference = parseInt(product.expiryDate.slice(8)) - day; %>
                <% const productYear = parseInt(product.expiryDate.slice(0,4)) %>
                <% const productMonth = parseInt(product.expiryDate.slice(5,7)) %>
                <% const productDay = parseInt(product.expiryDate.slice(8)) %>
                
                <!-- Expired -->
                <% if (year > productYear || (year == productYear && month > productMonth) || (year == productYear && month == productMonth && dayDifference < 0)) { %>
                    <li class="listItem"><a href="/products/<%=product._id%>" style="color:brown"><%= product.expiryDate %> <%= product.title %> <i class="fa fa-trash-o" style="font-size:15px"></i> </a></li>

                <!-- About to expire -->
                <!-- Same year, same month, dayDifference < 3 OR same year, product expiry is +1 month, dayDifference < 3 -->
                <% } else if ( (year == productYear && month == productMonth && (dayDifference >= 0 && dayDifference < 3) )  ||  ( (year == productYear && productMonth - month == 1) && ((totalDaysInCurrentMonth - day + productDay) < 3) )) { %>
                    
                    <li class="listItem"><a href="/products/<%=product._id%>" style="color: red"><%= product.expiryDate %> <%= product.title %> &#9888;</a></li>
                
                <!-- Not expiring any time soon -->
                <% } else { %>
                    <li class="listItem"><a href="/products/<%=product._id%>" style="color:green"><%= product.expiryDate %> <%= product.title %></a></li>
                <% } %>
            <% } %>

        </ul>
    </section>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

    <script>
        document.querySelector("#search-input").addEventListener("input", filterList);

        function filterList() {
            const searchInput = document.querySelector("#search-input");
            const filter = searchInput.value.toLowerCase();
            const listItems = document.querySelectorAll(".listItem");

            listItems.forEach(e => {
                let text = e.textContent;
                if(text.toLowerCase().includes(filter.toLowerCase())) {
                    e.style.display = "";
                } else {
                    e.style.display = "none";
                }
            })
        }
    </script>
</body>
</html>